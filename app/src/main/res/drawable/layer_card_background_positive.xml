<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/card_indicator_thickness">
        <shape>
            <solid android:color="@color/rate_change_positive_indicator" />
            <corners android:radius="2dp" />
        </shape>
    </item>
	<item android:top="@dimen/card_indicator_thickness">
		<shape android:shape="rectangle">
			<solid android:color="#CABBBBBB"/>
			<corners android:radius="2dp" />
		</shape>
	</item>
	<item
        android:id="@+id/card_item_card_background"
		android:top="@dimen/card_indicator_thickness"
		android:bottom="2dp">
		<shape android:shape="rectangle">
			<solid android:color="@color/card_white"/>
			<corners android:radius="2dp" />
		</shape>
	</item>
</layer-list>
